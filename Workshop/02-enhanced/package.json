{
  "name": "nestjs-workshop-02-enhanced",
  "version": "1.0.0",
  "description": "NestJS Workshop - Enhanced Patterns with Comprehensive Tests",
  "scripts": {
    "test": "jest --testMatch='**/*.demo.spec.ts'",
    "test:all": "jest",
    "test:watch": "jest --watch --testMatch='**/*.demo.spec.ts'",
    "test:cov": "jest --coverage --testMatch='**/*.demo.spec.ts'",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand --testMatch='**/*.demo.spec.ts'"
  },
  "keywords": [
    "nestjs",
    "testing",
    "functional-programming",
    "testability"
  ],
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "jest": "^29.5.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
